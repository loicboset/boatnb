<!-- HEADER -->

<div id="header">
	<div class="header_img"><%= image_tag "harbor1.jpg" %></div>
	<div class="header_nav">
		<i id="header_nav_main_icon" class="fas fa-anchor"></i>
		<i class="fas fa-sort-down"></i>
	</div>
	<h1>Earn money as a Boatnb host</h1>
</div>

<!-- PLACE INFORMATION -->

<div id="place_information">
	<h1>Tell us a bit about your place</h1>

	<%= form_tag "/boats", method: "post" do %>
		<input class="button_style" type="text" name="location" placeholder="Monaco" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Monaco'">
		<select class="button_style" name="boat_space">
			<option value="Entire boat">Entire boat</option>
			<option value="Shared boat">Shared boat</option>
		</select>
		<select class="button_style" name="guests">
			<option value="1">1 guest</option>
			<option value="2">2 guests</option>
			<option value="3">3 guests</option>
			<option value="4">4 guests</option>
			<option value="5">5 guests</option>
			<option value="6">6 guests</option>
		</select>

		<input class="button" type="submit" value="Get started">
	<% end %>

</div>

